<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_col"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wale_tech.tryon.MainActivity">

    <include
        android:id="@+id/main_search_item"
        layout="@layout/public_search_item" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/main_net_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/item_double_divider" />

    <ImageButton
        android:id="@+id/main_scan_imgbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/dw_color_main_circle_btn"
        android:scaleType="centerInside"
        android:src="@drawable/image_main_scan" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_user_fab"
        style="@style/main_fab_style"
        android:layout_margin="@dimen/item_double_divider"
        android:src="@drawable/ic_main_user"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_history_fab"
        style="@style/main_fab_style"
        android:layout_marginBottom="@dimen/item_double_divider"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:src="@drawable/ic_main_history"
        app:fabSize="mini" />

    <include layout="@layout/public_snack_page" />

</android.support.design.widget.CoordinatorLayout>
