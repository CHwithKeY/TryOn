<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update.Update_Act">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <include layout="@layout/divider_horizontal_gray_item" />

        <TextView
            android:id="@+id/update_version_tv"
            style="@style/base_list_item_tv_style"
            android:text="@string/update_version_tv" />

        <include layout="@layout/divider_horizontal_gray_item" />

        <TextView
            android:id="@+id/update_check_tv"
            style="@style/base_list_item_tv_style"
            android:text="@string/update_check_tv" />

        <include layout="@layout/divider_horizontal_gray_item" />

    </LinearLayout>

    <include layout="@layout/public_back_item" />

    <include layout="@layout/public_snack_page" />

</RelativeLayout>
