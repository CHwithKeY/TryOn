<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wale_tech.tryon.history.HistoryImage_Act">

    <LinearLayout
        android:id="@+id/history_image_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_double_divider"
        android:layout_marginTop="@dimen/item_five_time_divider"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history_image_online_tv"
            style="@style/history_title_tv_style"
            android:background="@drawable/dw_color_assist_eclipse_entire_tv"
            android:text="在线图片"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_margin="@dimen/item_divider"
            android:background="@color/colorMain" />

        <TextView
            android:id="@+id/history_image_local_tv"
            style="@style/history_title_tv_style"
            android:background="@drawable/dw_color_assist_eclipse_empty_tv"
            android:text="本地图片"
            android:textColor="@color/colorAssist" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/history_image_child_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/history_image_title_ll" />

    <include layout="@layout/public_back_item" />

    <include layout="@layout/public_snack_page" />

</RelativeLayout>
